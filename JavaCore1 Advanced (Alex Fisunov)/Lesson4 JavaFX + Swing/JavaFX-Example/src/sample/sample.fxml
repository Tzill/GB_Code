<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea"
      fx:controller="sample.Controller" stylesheets="@stylesheet.css">
    <HBox>
        <Button text="Press HERE!" onAction="#oneOfThreeButtonClick"/>
        <Button text="No!!!" onAction="#oneOfThreeButtonClick"/>
        <Button text="???" onAction="#oneOfThreeButtonClick"/>
        <TextField fx:id="mainTextField" promptText="Write HERE..." HBox.hgrow="ALWAYS"/>
    </HBox>
    <TextArea VBox.vgrow="ALWAYS" fx:id="textArea"/>
    <Button fx:id="btnAddText" prefWidth="200" prefHeight="32" text="Add text to TextArea" onAction="#addTextToArea" styleClass="myBtn"/>
    <HBox fx:id="testHBox"/>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</VBox>
