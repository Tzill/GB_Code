<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="globParent" alignment="center" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.client.RegistrationController">
    <TextField fx:id="login" maxWidth="200" promptText="Логин">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></TextField>
    <TextField fx:id="password" maxWidth="200" promptText="Пароль">
    <VBox.margin>
        <Insets bottom="10.0" />
    </VBox.margin></TextField>
    <TextField fx:id="nickname" maxWidth="200" promptText="Ник">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin></TextField>

    <Button onAction="#tryToRegister" prefWidth="200" text="Зарегистрироваться">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>

    <Label fx:id="result" alignment="CENTER" maxWidth="300" />
</VBox>
